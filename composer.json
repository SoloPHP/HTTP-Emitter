{
  "name": "solophp/http-emitter",
  "type": "library",
  "description": "PSR-7 HTTP Response Emitter",
  "keywords": ["php","psr-7","http","response","emitter"],
  "license": "MIT",
  "authors": [
    {
      "name": "Vitaliy Olos",
      "email": "vedastudio@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Solo\\HttpEmitter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Solo\\HttpEmitter\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "psr/http-message": "^1.1|^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.10"
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "phpstan": "phpstan analyse src/"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
